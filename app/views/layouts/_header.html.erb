<header class="px-2 py-1 relative bg-gray-800">
  <div class="flex justify-between items-center container mx-auto">
    <div class="hover:opacity-50 cursor-pointer">
      <%= link_to(root_url, class: 'text-3xl text-blue-300', style: 'font-family: "Nico Moji";') do %>
      キモチのゴミすてば
      <% end %>
    </div>
    <div class="hidden md:block">
      <a href='https://poiit.me/d0ne1s/?utm_source=poiit&utm_medium=referral&utm_campaign=v1.0&utm_content=embed-banner'
        target='_blank' class="px-3 text-gray-400 cursor-pointer">Poiit</a>
      <a href='https://github.com/nyshk97/drafitter' target='_blank'
        class="px-3 text-gray-400 cursor-pointer">GitHub</a>
      <a href='https://twitter.com/d0ne1s' target='_blank' class="px-3 text-gray-400 cursor-pointer">Twitter</a>
      <a href='https://www.kiyaku.app/termsOfService/8eenERXufvU8CtdxXUD6' target='_blank'
        class="px-3 text-gray-400 cursor-pointer">利用規約</a>
    </div>
  </div>

  <div class="absolute md:hidden top-0 right-0">
    <div class="drawer">
      <input class="drawer__checkbox" id="drawerCheckbox" type="checkbox">
      <label class="drawer__icon" for="drawerCheckbox">
        <span class="drawer__icon -parts"></span>
      </label>
      <label class="drawer__overlay" for="drawerCheckbox"></label>
      <nav class="drawer__menu">
        <ul>
          <li class="border-b px-4 py-3 cursor-pointer">
            <a href='https://poiit.me/d0ne1s/?utm_source=poiit&utm_medium=referral&utm_campaign=v1.0&utm_content=embed-banner'
              target="_blank">Poiit</a>
          </li>
          <li class="border-b px-4 py-3 cursor-pointer">
            <a href='https://github.com/nyshk97/drafitter' target="_blank">GitHub</a>
          </li>
          <li class="border-b px-4 py-3 cursor-pointer">
            <a href='https://twitter.com/d0ne1s' target="_blank">Twitter</a>
          </li>
          <li class="border-b px-4 py-3 cursor-pointer">
            <a href='https://www.kiyaku.app/termsOfService/8eenERXufvU8CtdxXUD6' target="_blank">利用規約</a>
          </li>
        </ul>
      </nav>
    </div>
    <style>
      .drawer {
        position: relative;
      }

      .drawer__checkbox {
        display: none;
      }

      .drawer__icon {
        cursor: pointer;
        display: block;
        width: 56px;
        height: 60px;
        position: fixed;
        right: 0;
      }

      .drawer__icon.-parts,
      .drawer__icon.-parts:before,
      .drawer__icon.-parts:after {
        background-color: #000;
        display: block;
        width: 26px;
        height: 2px;
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        margin: auto;
      }

      .drawer__icon.-parts:before,
      .drawer__icon.-parts:after {
        content: "";
      }

      .drawer__icon.-parts:before {
        top: 16px;
      }

      .drawer__icon.-parts:after {
        top: -16px;
      }

      .drawer__overlay {
        background: #000;
        opacity: 0;
        pointer-events: none;
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        right: 0;
      }

      .drawer__menu {
        background: #ffffff;
        color: #000;
        max-width: 100%;
        width: 320px;
        height: object-fit;
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
        position: fixed;
        top: 0;
        right: -320px;
      }

      .drawer__icon {
        z-index: 40;
      }

      .drawer__menu {
        z-index: 30;
      }

      .drawer__overlay {
        z-index: 20;
      }

      .drawer__checkbox:checked~.drawer__icon .drawer__icon.-parts {
        background: transparent;
      }

      .drawer__checkbox:checked~.drawer__icon .drawer__icon.-parts:before {
        -webkit-transform: rotate(-45deg);
        transform: rotate(-45deg);
        top: 0;
      }

      .drawer__checkbox:checked~.drawer__icon .drawer__icon.-parts:after {
        -webkit-transform: rotate(45deg);
        transform: rotate(45deg);
        top: 0;
      }

      .drawer__checkbox:checked~.drawer__overlay {
        opacity: 0.3;
        pointer-events: auto;
      }

      .drawer__checkbox:checked~.drawer__menu {
        right: 0;
      }

      .drawer__icon.-parts,
      .drawer__icon.-parts:after,
      .drawer__icon.-parts:before,
      .drawer__overlay,
      .drawer__menu {
        -webkit-transition: all 0.7s;
        transition: all 0.7s;
      }

      .sp {
        display: none;
      }

      @media screen and (max-width: 768px) {
        .sp {
          display: block;
        }
      }
    </style>
</header>