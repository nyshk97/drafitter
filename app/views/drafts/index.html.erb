<% provide(:title, "ドラフト一覧") %>
<div class='mt-8 mb-4'>
  <%= form_with model: @draft do |f| %>
  <%= render 'content_input', f: f %>
  <%= render 'shared/err_msg' %>
  <div class="mt-3 text-center">
    <%= f.submit '追加', id: 'tweetSubmit', class: 'w-1/2 text-sm rounded-full text-gray-100 py-2 bg-blue-600 cursor-pointer hover:shadow-inner hover:bg-blue-700 transition-all duration-300' %>
  </div>
  <% end %>
</div>
<div class='py-3'>
  <% @drafts.each do |draft| %>
  <div class='p-2 border border-gray-300 rounded mb-3'>
    <p class='mb-2'><%= simple_format(h(draft.content)) %></p>
    <p class='text-right'>
      <%= link_to (edit_draft_path(draft)) do %>
      <svg class="w-4 h-4 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
      </svg>
      <% end %>
      <span class='text-xs'>残り<span class='text-sm'><%= draft.remaining_time.html_safe %></span></span>
    </p>
  </div>
  <% end %>
</div>