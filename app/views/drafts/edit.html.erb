<% provide(:title, "ドラフト一覧") %>
<%= form_with model: @draft, class: 'mt-4' do |f| %>
<%= render 'content_input', f: f %>
<%= render 'shared/err_msg' %>
<div class="mt-3 text-center">
  <%= f.submit '更新', class: 'w-1/2 text-sm rounded-full text-gray-100 py-2 bg-blue-500 cursor-pointer hover:shadow-inner hover:bg-blue-700 transition-all duration-300' %>
</div>
<% end %>