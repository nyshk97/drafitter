<% provide(:title, "ドラフト一覧") %>
<%= form_with model: @draft, local: true do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="border transition-all duration-500 relative rounded p-1 mt-4">
  <div class="-mt-4 absolute tracking-wider px-1 text-xs">
    <p>
      <%= f.label :content, class: 'bg-white text-gray-600 px-1' %>
    </p>
  </div>
  <p>
    <%= f.text_area :content, class: 'py-1 px-1 text-gray-900 outline-none block h-full w-full' %>
  </p>
</div>
<div class="border transition-all duration-500 relative rounded p-1 mt-4">
  <div class="-mt-4 absolute tracking-wider px-1 text-xs">
    <p>
      <%= f.label :url, class: 'bg-white text-gray-600 px-1' %>
    </p>
  </div>
  <p>
    <%= f.text_field :url, class: 'py-1 px-1 text-gray-900 outline-none block h-full w-full' %>
  </p>
</div>
<div class="mt-3">
  <%= f.submit '更新', class: 'text-sm rounded-full text-gray-100 px-4 py-2 bg-blue-500 cursor-pointer hover:shadow-inner hover:bg-blue-700 transition-all duration-300' %>
</div>
<% end %>